<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="payload_box">
    <static>false</static>

    <link name="base_link">

      <!-- Inertial properties -->
      <inertial>
        <mass>0.5</mass>
        <pose>0.03008 0 0 0 0 0</pose> <!-- COM shifted toward front -->

        <inertia>
          <!-- Box inertia tensor -->
          <ixx>0.00063</ixx>
          <iyy>0.00055</iyy>
          <izz>0.00042</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <!-- Collision -->
      <collision name="base_link_collision">
        <geometry>
          <box>
            <size>0.12033 0.11263914 0.015</size>
          </box>
        </geometry>
      </collision>

      <!-- Visual -->
      <visual name="visual">
        <geometry>
          <box>
            <size>0.12033 0.11263914 0.015</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.6 0.6 0.6 1</diffuse>
        </material>
      </visual>

      <visual name="origin_marker">
        <geometry>
          <sphere>
            <radius>0.005</radius>
          </sphere>
        </geometry>
        <material>
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <link name="left_wheel">
      <pose relative_to="base_link">0.055 0.06066 -0.00625 0 1.5707 1.5707</pose> 
      <inertial>
        <mass>0.2</mass>
          <inertia>
            <ixx>2.6e-5</ixx>
            <iyy>2.6e-5</iyy>
            <izz>2.6e-5</izz>
          </inertia>
      </inertial>

      <collision name="left_wheel_collision">
        <geometry>
          <cylinder>
            <radius> 0.01611839 </radius>
            <length>0.01338964</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="left_wheel_visual">
        <geometry>
          <mesh>
            <uri>model://payload/meshes/polulu_wheel.stl</uri>
          </mesh>
        </geometry>

        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <link name="right_wheel">
      <pose relative_to="base_link">0.055 -0.06066 -0.00625 0 1.5707 -1.5707</pose>
      <inertial>
        <mass>0.2</mass>
          <inertia>
            <ixx>2.6e-5</ixx>
            <iyy>2.6e-5</iyy>
            <izz>2.6e-5</izz>
          </inertia>
      </inertial>

      <collision name="right_wheel_collision">
        <geometry>
          <cylinder>
            <radius> 0.01611839 </radius>
            <length>0.01338964</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="right_wheel_visual">
        <geometry>
          <mesh>
            <uri>model://payload/meshes/polulu_wheel.stl</uri>
          </mesh>
        </geometry>

        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
    </link>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 0 -1</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <link name="ball_bearing">
      <pose relative_to="base_link">-0.045 0 -0.0105 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>7.2e-5</ixx>
          <iyy>7.2e-5</iyy>
          <izz>7.2e-5</izz>
        </inertia>
      </inertial>

      <collision name="ball_bearing_collision">
        <geometry>
          <sphere>
            <radius> 0.00951608 </radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.0</mu>
              <mu2>0.0</mu2>
            </ode>
          </friction>
        </surface>

      </collision>

      <visual name="ball_bearing_visual">
        <geometry>
          <sphere>
            <radius> 0.00951608 </radius>
          </sphere>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
    </link>

    <joint name="ball_joint" type="ball">
      <parent>base_link</parent>
      <child>ball_bearing</child>
      <!-- <pose relative_to="ball_bearing">0 0 0 0 0 0</pose>  pivot point at center of sphere -->
    </joint>



    <!-- ================= CAMERA MODEL ================= -->
    <include merge="true">
      <uri>model://mono_cam</uri>
      <pose>0.058 0 0.020 0 0 0</pose>
    </include>

    <!-- ================= CAMERA ATTACHMENT ================= -->
    <joint name="payload_camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
    </joint>

    <plugin
      name="gz::sim::systems::DiffDrive"
      filename="gz-sim-diff-drive-system">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.12132</wheel_separation>
      <wheel_radius>0.01611839</wheel_radius>
      <update_rate>100</update_rate>
    </plugin>

  </model>
</sdf>
